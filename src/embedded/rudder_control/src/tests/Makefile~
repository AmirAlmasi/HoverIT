
SRC_DIR=../

# -I $(SRC_DIR) -I/opt/searduino/include/searduino/arduino-sources/core -I/opt/searduino/include/searduino/  -I/opt/searduino/include/searduino/arduino  -I/opt/searduino/include/searduino/arduino-extras

CFLAGS = -lcheck -L/opt/searduino/lib -lsearduinostub 
TESTOBJS=checkmain.o checkRuddarControll.o ../RuddarControll.o
CHECK_PROGRAM=RuddarControll


check: $(TESTOBJS)
	echo "Will soon check"
	gcc $(TESTOBJS) $(CFLAGS) -o $(CHECK_PROGRAM) 
	export LD_LIBRARY_PATH=/opt/searduino/lib && ./$(CHECK_PROGRAM) 

clean:
	-rm $(TESTOBJS)
	-rm $(CHECK_PROGRAM)

